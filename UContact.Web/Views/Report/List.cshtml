@model List<ReportViewModel>
@{
    Layout = "";
}
<table class="table table-bordered table-hover mb-0">
    <thead>
        <tr>
            <th>Location</th>
            <th>Contact Count</th>
            <th>Phone Number Count</th>
            <th>Status</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.Location</td>
                <td class="align-middle">@item.ContactCount</td>
                <td class="align-middle">@item.PhoneNumberCount</td>
                <td class="align-middle">@item.StatusId</td>
                <td class="align-middle">@item.CreatedOn</td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-labelledby="DetailModalTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailModalLongTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body modal-load"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<script>
    function DeletePerson(guid) {
        var url = "/Person/Delete?Id=" + guid;
        Swal.fire({
            title: 'Do you want to delete person?',
            showDenyButton: true,
            confirmButtonText: `Delete`,
            denyButtonText: `Cancel`,
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: url,
                    dataType: 'json',
                    type: 'POST',
                    data: "{'Id': '" + guid + "'}",
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        if (data == "DELETED") {
                            Swal.fire({
                                title: 'Success!',
                                text: 'Record is deleted',
                                icon: 'success'
                            })
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: data,
                                icon: 'error',
                                confirmButtonText: 'Cool'
                            })
                        }
                    }
                });
            }
            else if (result.isDenied) {
            }
        })
    }
    function GetPersonDetail(guid) {
        var url = "/Person/InsertOrUpdate?Id=" + guid;
        $("#proccess").load(url, function (responseTxt, statusTxt, xhr) {
            if (statusTxt == "success")
                console.log("success");
            if (statusTxt == "error")
                alert("Error: " + xhr.status + ": " + xhr.statusText);
        });
    }
</script>